</head>
<body>
    <div class="ToanTrang">
    <section class="blank">
        <div class="flash">
            @*Tạo div đăng ký đăng nhập*@
            <div class="Phone">
                <i class="fa fa-phone">01867945875</i>
            </div>
            @if (Session["TenKHa"]!= null)
            {
                <div class="DangKyDangNhap">
                    @Html.Encode(User.Identity.Name)
                    @Html.Action("GioHangPartial", "GioHang")
                    Chào mừng @Session["TenKHa"].ToString()
                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post)) { 
                   @Html.ActionLink("Đăng xuất","Logout","NguoiDung")
                    }
                </div>
            }
            else
            {
                <div class="DangKyDangNhap">
                    <i class="fa fa-power-off"></i>
                    @Html.ActionLink("Đăng ký", "DangKy", "NguoiDung", null, htmlAttributes: new { @class = "DangKy" })
                    <i class="fa fa-sign-in"></i>
                    @Html.ActionLink("Đăng nhập", "DangNhap", "NguoiDung", null, htmlAttributes: new { @class = "DangNhap" })
                </div>
            }
           
        </div>
        @*Xay dung div menu*@
        <div class="flash success" id="divDanhMuc">
            <div id="Search">
                @*Tim kiem*@
                @using (Html.BeginForm("KetQuaTimKiem","Home", FormMethod.Post))
                {
                    @Html.TextBox("txtSearch", "", htmlAttributes: new { @class = "textBoxSearch", @placeholder = "Nhập từ khóa cần tìm", @id = "search" })
                     <button class="btnSearch" type="submit">
                        <i class="fa fa-search"></i>
                     </button>
                }
            </div>
            @*Menu*@
            <ul class="navMenu">
                <li>
                    @Html.ActionLink("Trang Chủ", "Index","Home")
                </li>
                <li>
                    <a href="#">Giới thiệu</a>
                </li>
                <li>
                    <a href="#">Liên hệ</a>
                </li>
                <li>
                    <a href="#">Hướng dẫn</a>
                </li>
                <li>
                    <a href="#">Sản phẩm</a>
                </li>
            </ul>
        </div>
    </section>

    <section>
        <div class="HoatDong">
            @*Chen partial view sach moi*@
            <div class="activity">
                @Html.Action("SachMoiPartial", "Sach")
            </div>
        </div>
        @*Chen div Silder*@
        <div class="Slide">
            <div class="slider-wrapper theme-default">
                <div id="slider" class="nivoSlider">
                    <img src="~/Images/E19JYut.jpg" />
                    <img src="~/Images/8YQxgd9.jpg" />
                    <img src="~/Images/gUMHWvP.jpg" />
                    <img src="~/Images/HAHw9MM.jpg" />
                </div>
                <div id="htmlcaption" class="nivo-html-caption">
                    <strong>This</strong> is an example of a <em>HTML</em> caption with <a href="#">a link</a>.
                </div>
            </div>
        </div>
        <div style="clear:both"></div>
    </section>
        @*div body*@
        <div id="NoiDung">
            @RenderBody()
        </div>
    <section>
        <div id="Show">
            @Html.Action("ChuDePartial","ChuDe")
        </div>
        <hr>
    </section>
        @*Div nha xuat ban*@
    <section class="blank items">
        <div id="NhaXuatBan">
            <div class="item">
                <div class="item-info">
                    @Html.Action("NhaXuatBanPartial","NhaXuatBan")
                  
                </div>
            </div>
        </div>
        <div id="NhaXuatBanContent">
            @RenderSection("NhaXuatBanContent", false)
        </div>
        <div style="clear:both;"></div>

        <div>
            <a href="#" class="button button-buy">Buy button (full width for columns)</a>
        </div>
    </section>
</div>
    @*cript Slider*@
    <script type="text/javascript">
        $(window).load(function () {
            $('#slider').nivoSlider({
                controlNav: false
            });
        });
    </script>
</body>
</html>
